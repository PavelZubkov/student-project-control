<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2"></div>
        <div class="col-md-6">
			<h1 class="text-center">Вход</h1>
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="alert alert-danger hidden">
						<strong>Ошибка!</strong>
						Нет такого пользователя!
					</div>
					<form class="login-form" method="POST">
						<div class="form-group">
							<label for="input-username">Имя пользователя</label>
							<input type="text" class="form-control" id="input-username" name="username" value="" placeholder="Имя" autofocus required>
						</div>
						<div class="form-group">
							<label for="input-password">Пароль</label>
							<input type="password" class="form-control" id="input-password" name="password" value="" placeholder="******" required>
						</div>
						<button type="submit" class="btn btn-primary btn-block">Войти</button>
					</form>
				</div>
			</div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-1"></div>
    </div>
</div>

