{{> modal-task-list}}
<div class="tasks-list">
  <h4><small>Список задач проекта</small></h4>
  <div class="wrapper">
    <button type="button" class="btn btn-default tasks_list_add_task">Добавить</button>
    <button type="button" class="btn btn-danger tasks_list_del_task">Удалить</button>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th class="th_name">Название</th>
        <th>Срок</th>
        <th>Подотчетные</th>
        <th>Статус</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each project.tasks}}
          {{#this}}
        <tr data-id="{{id}}" data-number="{{add @index 1}}" id="{{id}}">
          <th>{{add @index 1}}</th>
          <td>{{name}}</td>
          <td>{{dueDate}}</td>
          <td>
            {{#each members}}
              <span class='mini-initials'>
                {{#this}}
                  {{initials}}
                {{/this}}
              </span>
            {{/each}}
          </td>
          <td>{{state}}</td>
          <td>
            <button data-id="{{id}}" type="button" class="btn btn-default btn-xs change_task">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </button>          
            <button data-id="{{id}}" type="button" class="btn btn-default btn-xs copy_task">
              <span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
            </button>
          </td>
        </tr>
          {{/this}}
      {{/each}}
    </tbody>
  </table>
</div>