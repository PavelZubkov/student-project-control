<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-2"></div>
        <div class="col-md-6">
			<h1 class="text-center">Регистрация<br><small>Заполните все поля</small></h1>
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="alert alert-danger hidden">
						<strong>Ошибка!</strong>
						Попробуйте позже!
					</div>
					<form  class="signup-form" method="post">
						<div class="form-group">
							<label for="input-name">Имя</label>
							<input type="text" class="form-control" id="input-name" name="firstName" placeholder="Петр" value="" required>
						</div>
						<div class="form-group">
							<label for="inputSurname">Фамилия</label>
							<input type="text" class="form-control" id="inputSurname" name="lastName" placeholder="Иванов" value="" required>
						</div>
						<div class="form-group">
							<label for="input-email">Адрес электронной почты</label>
						  	<input type="email" class="form-control" id="input-email" name="email" placeholder="user123@mail.ru" value="" autofocus required>
					   </div>
						<div class="form-group">
							<label for="input-username">Логин</label>
						  	<input type="text" class="form-control" id="input-username" name="username" placeholder="user123" value="" autofocus required>
					   </div>
						<div class="form-group">
							<label for="inputPassword">Пароль</label>
							<input type="password" class="form-control" id="inpupPassword" name="password" placeholder="******" value="" required>
						</div>
						<button type="submit" class="btn btn-primary btn-block">Отправить</button>
					</form>
				</div>
			</div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-1"></div>
    </div>
</div>



